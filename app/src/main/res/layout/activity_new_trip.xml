<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewTripActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/ET_Note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ET_StartLocation"
                android:layout_alignStart="@+id/ET_StartLocation"
                android:layout_below="@+id/ET_StartKm"
                android:ems="10"
                android:hint="Zweck"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/BT_StartTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/SW_Category"
                android:layout_marginBottom="50dp"
                android:text="Farht starten" />

            <EditText
                android:id="@+id/ET_StartKm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ET_StartLocation"
                android:layout_alignStart="@+id/ET_StartLocation"
                android:layout_below="@+id/ET_StartTime"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="Kilometerstand*"
                android:inputType="number" />

            <EditText
                android:id="@+id/ET_StartTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ET_StartLocation"
                android:layout_alignStart="@+id/ET_StartLocation"
                android:layout_below="@+id/ET_StartDate"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="Zeit (hh:mm)*"
                android:inputType="time" />

            <Switch
                android:id="@+id/SW_Category"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ET_Note"
                android:layout_centerHorizontal="true"
                android:checked="true"
                android:ems="10"
                android:textSize="18sp"
                android:text="Beruflich" />

            <EditText
                android:id="@+id/ET_StartLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="74dp"
                android:ems="10"
                android:hint="Ort Abfarht*"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/ET_StartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ET_StartLocation"
                android:layout_alignStart="@+id/ET_StartLocation"
                android:layout_below="@+id/ET_StartLocation"
                android:ems="10"
                android:hint="Datum (tt/mm/yyyy)*"
                android:inputType="date" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>