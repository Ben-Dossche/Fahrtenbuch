<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewTripActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TV_Start"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Abfahrt"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textSize="25sp"
                android:textAlignment="center"
                />

            <EditText
                android:id="@+id/ET_StartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/TV_Start"
                android:layout_alignStart="@+id/TV_Start"
                android:layout_marginRight="25dp"
                android:layout_below="@+id/TV_Start"
                android:ems="10"
                android:hint="Datum (tt/mm/yyyy)*"
                android:inputType="date" />

            <ImageButton
                android:id="@+id/BT_CalenderDlg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ET_StartDate"
                android:layout_marginTop="12dp"
                android:layout_marginRight="15dp"
                android:layout_alignEnd="@id/TV_Start"
                android:layout_alignParentEnd="true"
                android:background="@null"
                app:srcCompat="@drawable/ic_next_week_black_24dp" />
            <EditText
                android:id="@+id/ET_StartTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/TV_Start"
                android:layout_alignStart="@+id/TV_Start"
                android:layout_below="@+id/ET_StartDate"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="Zeit (hh:mm)*"
                android:inputType="time" />

            <EditText
                android:id="@+id/ET_StartAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/TV_Start"
                android:layout_alignStart="@+id/TV_Start"
                android:layout_below="@+id/ET_StartTime"
                android:layout_marginRight="25dp"
                android:ems="10"
                android:hint="Addresse Abfarht*"
                android:inputType="textPersonName" />
            <ImageButton
                android:id="@+id/BT_RetourTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ET_StartAddress"
                android:layout_marginTop="12dp"
                android:layout_marginRight="15dp"
                android:layout_alignEnd="@id/TV_Start"
                android:layout_alignParentEnd="true"
                android:background="@null"
                app:srcCompat="@drawable/ic_renew_black_24dp" />

            <EditText
                android:id="@+id/ET_StartLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/TV_Start"
                android:layout_alignStart="@+id/TV_Start"
                android:layout_below="@+id/ET_StartAddress"
                android:ems="10"
                android:hint="Ort Abfarht*"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/ET_StartKm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/TV_Start"
                android:layout_alignStart="@+id/TV_Start"
                android:layout_below="@+id/ET_StartLocation"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="25dp"
                android:ems="10"
                android:hint="Kilometerstand*"
                android:inputType="number" />

            <ImageButton
                android:id="@+id/BT_LastKm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ET_StartKm"
                android:layout_marginTop="12dp"
                android:layout_marginRight="15dp"
                android:layout_alignEnd="@id/TV_Start"
                android:layout_alignParentEnd="true"
                android:background="@null"
                app:srcCompat="@drawable/ic_renew_black_24dp" />
            <EditText
                android:id="@+id/ET_Note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/TV_Start"
                android:layout_alignStart="@+id/TV_Start"
                android:layout_below="@+id/ET_StartKm"
                android:ems="10"
                android:hint="Zweck"
                android:inputType="textPersonName" />

            <Switch
                android:id="@+id/SW_Category"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ET_Note"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:checked="true"
                android:ems="10"
                android:text="Beruflich"
                android:textSize="18sp" />

            <Button
                android:id="@+id/BT_StartTrip"
                android:layout_width="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/SW_Category"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:background="@color/colorAccent"
                android:textColor="#ffffff"
                android:text="Fahrt starten" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>