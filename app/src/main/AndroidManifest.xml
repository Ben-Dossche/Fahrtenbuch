<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="swdev.wifi.at.fbapp">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_directions_car_white_48dp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_directions_car_white_48dp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainFBActivity"
            android:label="@string/title_activity_main_fb"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewTripActivity"
            android:label="Neue Fahrt starten" />
        <activity
            android:name=".EditActiveTripActivity"
            android:label="Aktive Fahrt" />
        <activity
            android:name=".EditOpenTripActivity"
            android:label="Offene Fahrt" />
        <activity
            android:name=".ExportActivity"
            android:label="Export" />
        <activity android:name=".SettingsActivity" />

        <service
            android:name=".FetchAddressIntentService"
            android:exported="false"></service>
    </application>

</manifest>